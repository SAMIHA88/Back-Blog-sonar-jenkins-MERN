pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/SAMIHA88/Back-Blog-sonar-jenkins-MERN.git', branch: 'master'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Utilisez 'bat' au lieu de 'sh' pour exécuter des commandes dans Windows
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                // Utilisez 'bat' pour exécuter les tests
                bat 'npm test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarQube_server') {
                        // Assurez-vous que sonar-scanner est configuré et accessible sur Windows
                        bat 'sonar-scanner'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                // Utilisez 'bat' pour construire votre application
                bat 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Déploiement de l\'application...'
                // Utilisez 'bat' pour les commandes de déploiement si nécessaire
                // bat 'votre-commande-de-deploiement'
            }
        }
    }

    post {
        always {
            echo 'La pipeline est terminée.'
            script {
                // Vérifiez la qualité du code avec SonarQube après les étapes de build
                def qg = waitForQualityGate()
                if (qg.status != 'OK') {
                    error "Échec de la qualité du code selon les critères de SonarQube."
                }
            }
        }
        success {
            echo 'Succès!'
        }
        failure {
            echo 'Échec!'
        }
    }
}
