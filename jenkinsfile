pipeline {
    agent any

    environment {
        // Définissez ici les variables d'environnement nécessaires
        // Par exemple, SONARQUBE_SCANNER_HOME si nécessaire
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/SAMIHA88/Back-Blog-sonar-jenkins-MERN.git', branch: 'master'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // Si vous avez un token SonarQube, vous pouvez le configurer ici
                    withSonarQubeEnv('SonarQube_server') {
                        sh 'sonar-scanner'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Déploiement de l\'application...'
                // sh 'votre-commande-de-deploiement'
            }
        }
    }

    post {
        always {
            echo 'La pipeline est terminée.'
        }
        success {
            echo 'Succès!'
        }
        failure {
            echo 'Échec!'
        }
        // Étape optionnelle pour vérifier la qualité du code
        qualityGate: {
            steps {
                script {
                    // Cette étape échouera si la qualité du code ne répond pas aux critères définis dans SonarQube
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
