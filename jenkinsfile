pipeline {
    agent any

    // Commentez ou supprimez cette section si vous n'avez pas de variables d'environnement spécifiques à définir
   
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/SAMIHA88/Back-Blog-sonar-jenkins-MERN.git', branch: 'master'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarQube_server') {
                        sh 'sonar-scanner'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Déploiement de l\'application...'
                // sh 'votre-commande-de-deploiement'
            }
        }
    }

    post {
        always {
            echo 'La pipeline est terminée.'
            script {
                // Vérifiez la qualité du code avec SonarQube après les étapes de build
                def qg = waitForQualityGate()
                if (qg.status != 'OK') {
                    error "Échec de la qualité du code selon les critères de SonarQube."
                }
            }
        }
        success {
            echo 'Succès!'
        }
        failure {
            echo 'Échec!'
        }
    }
}
